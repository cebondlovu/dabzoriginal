<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:layout_margin="2dp"
    android:background="@color/primaryLight"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_ic_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/username_ic_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/hint_clr"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/profile_ic_img"
        app:layout_constraintTop_toTopOf="@id/profile_ic_img"
        app:layout_constraintBottom_toBottomOf="@id/profile_ic_img"/>

    <com.hendraanggrian.appcompat.widget.SocialTextView
        android:id="@+id/comment_ic_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/socialtextview_main"
        android:minWidth="50dp"
        android:layout_marginBottom="2dp"
        android:padding="8dp"
        android:maxLength="250"
        android:textSize="15sp"
        android:textColor="@color/hint_clr"
        app:hashtagColor="@color/main_clr"
        app:layout_constraintStart_toEndOf="@id/profile_ic_img"
        app:layout_constraintTop_toBottomOf="@id/username_ic_txt"
        app:mentionColor="@color/comment"
        android:visibility="visible"/>
    <ImageView
        android:id="@+id/delete_ic_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_round_clear_24"
        android:padding="12dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/comment_ic_txt"/>
    <ImageView
        android:id="@+id/media_comment_ic_img"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/comment_ic_txt"/>
    <LinearLayout
        android:id="@+id/vn_container_ic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:weightSum="100"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="@drawable/socialtextview_main"
        app:layout_constraintTop_toBottomOf="@id/media_comment_ic_img">
        <ImageView
            android:id="@+id/play_ic_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_round_play_circle_filled_24"
            android:padding="8dp"
            android:layout_weight="5"
            app:tint="@color/main_clr"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="95"
            android:weightSum="100"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/vn_progress_ic_pb"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:layout_gravity="center_vertical"
                android:progressBackgroundTint="@color/hint_clr"
                android:progressTint="#D30000"
                tools:ignore="NestedWeights" />
            <TextView
                android:id="@+id/vn_progress_ic_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:gravity="center"
                android:textColor="@color/hint_clr"
                android:layout_weight="30"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/reply_ic_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        app:tint="@color/hint_clr"
        android:src="@drawable/ic_baseline_reply_24"
        android:layout_marginStart="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vn_container_ic"/>
    <TextView
        android:id="@+id/reply_ic_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 replies"
        android:textColor="@color/hint_clr"
        app:layout_constraintStart_toEndOf="@id/reply_ic_img"
        app:layout_constraintTop_toTopOf="@id/reply_ic_img"
        app:layout_constraintBottom_toBottomOf="@id/reply_ic_img"
        android:layout_marginStart="2dp"/>
    <TextView
        android:id="@+id/datetime_ic_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="5 years ago"
        android:layout_marginEnd="48dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vn_container_ic"/>
</androidx.constraintlayout.widget.ConstraintLayout>