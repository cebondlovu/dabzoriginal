<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primaryDark"
    android:padding="8dp">
    <TextView
        android:id="@+id/ticket_title_ita_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/price_title_ita_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/price"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/ticket_title_ita_txt"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/price_ita_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:textColor="@color/hint_clr"
        app:layout_constraintStart_toEndOf="@id/price_title_ita_txt"
        app:layout_constraintTop_toTopOf="@id/price_title_ita_txt"/>
    <TextView
        android:id="@+id/units_title_ita_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/units"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/price_title_ita_txt"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:textColor="@color/hint_clr"
        app:layout_constraintTop_toTopOf="@id/units_title_ita_txt"
        app:layout_constraintStart_toEndOf="@id/units_title_ita_txt"/>
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_baseline_edit_24"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>