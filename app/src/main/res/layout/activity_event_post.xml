<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_view_ep"
    android:background="@color/primaryLight"
    tools:context=".ui.post.EventPostAct">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/primaryDark">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryDark"
            android:id="@+id/toolbar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/close_ep_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="-10dp"
                    android:contentDescription="@string/todo"
                    android:padding="12dp"
                    android:src="@drawable/ic_baseline_close_24" />

                <ImageView
                    android:id="@+id/gallery_ep_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toStartOf="@id/next_ep_txt"
                    android:padding="12dp"
                    android:src="@drawable/ic_baseline_perm_media_24" />

                <TextView
                    android:id="@+id/next_ep_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/post_container_ep"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bar">
        <ImageView
            android:id="@+id/post_ip_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="0.9:1"
            tools:ignore="MissingConstraints,ImageContrastCheck"
            android:src="@drawable/ic_baseline_add_photo_alternate_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/caption_ip_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/post_container_ep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.hendraanggrian.appcompat.widget.SocialAutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/social_edittext_main"
            android:hint="@string/event_name"
            android:maxLines="1"
            android:layout_weight="100"
            android:minHeight="48dp"
            android:textSize="15sp"
            android:padding="6dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_clr"
            app:hashtagColor="@color/main_clr"
            app:mentionColor="@color/comment"
            app:socialFlags="hashtag|mention"
            android:id="@+id/name_ep_edt"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/start_title_ep_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_date"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/hint_clr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_ep_edt"/>
        <LinearLayout
            android:id="@+id/start_container_ep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/start_title_ep_txt"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/start_date_ip_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:layout_weight="60"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:padding="6dp"
                    android:drawablePadding="12dp"
                    android:minHeight="48dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/social_edittext_main"
                    app:drawableStartCompat="@drawable/ic_baseline_calendar_today_24" />

                <TextView
                    android:id="@+id/start_time_ip_txt"
                    android:layout_width="0dp"
                    android:layout_weight="40"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:padding="6dp"
                    android:drawablePadding="12dp"
                    android:minHeight="48dp"
                    android:background="@drawable/social_edittext_main"
                    app:drawableStartCompat="@drawable/ic_baseline_access_time_24" />
        </LinearLayout>
        <TextView
            android:id="@+id/end_title_ep_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_date"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/hint_clr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/start_container_ep"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/end_title_ep_txt"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/end_date_ip_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:layout_weight="60"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15sp"
                android:padding="6dp"
                android:layout_marginEnd="10dp"
                android:minHeight="48dp"
                android:drawablePadding="12dp"
                android:background="@drawable/social_edittext_main"
                app:drawableStartCompat="@drawable/ic_baseline_calendar_today_24" />

            <TextView
                android:id="@+id/end_time_ip_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:layout_weight="40"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15sp"
                android:padding="6dp"
                android:drawablePadding="12dp"
                android:minHeight="48dp"
                android:background="@drawable/social_edittext_main"
                app:drawableStartCompat="@drawable/ic_baseline_access_time_24"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>