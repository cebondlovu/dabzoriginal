<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/primaryLight"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/image_story_ils_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintDimensionRatio="0.8.1"
                    tools:ignore="MissingConstraints"
                    android:visibility="visible"/>
                <VideoView
                    android:id="@+id/video_story_ils_vid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintDimensionRatio="0.8.1"
                    tools:ignotr="MissingConstraints"
                    android:visibility="gone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <RelativeLayout
            android:id="@+id/container_ils_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="5dp">
                <ImageView
                    android:id="@+id/flame_s_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/todo"
                    android:padding="10dp"
                    android:src="@drawable/ic_outline_local_fire_department_24"
                    tools:ignore="SpeakableTextPresentCheck" />
                <TextView
                    android:id="@+id/flame_s_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hint_clr"
                    android:textStyle="bold"
                    android:minHeight="48dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="start|center_vertical"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/flame_s_img"
                    android:layout_centerInParent="true"
                    android:maxLines="1"/>
        </RelativeLayout>
        <com.hendraanggrian.appcompat.widget.SocialTextView
            android:id="@+id/caption_ils_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:layout_above="@id/container_ils_lay"
            android:background="@drawable/socialtextview_story_main"
            android:padding="8dp"
            android:textColor="@color/white"
            app:hashtagColor="@color/main_clr"
            app:mentionColor="@color/comment"
            app:socialFlags="hashtag|mention"
            android:visibility="gone"/>
</RelativeLayout>