<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:padding="8dp"
    android:background="@color/primaryLight">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hash_ih_txt"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@color/main_clr"
        android:textSize="20sp"
        android:text="#"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hashtag_ih_txt"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@color/main_clr"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/hash_ih_txt"
        app:layout_constraintTop_toTopOf="@id/hash_ih_txt"
        app:layout_constraintBottom_toBottomOf="@id/hash_ih_txt"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/post_count_ih_txt"
        android:maxLines="1"
        android:textColor="@color/hint_clr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hash_ih_txt"/>
</androidx.constraintlayout.widget.ConstraintLayout>