<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DeepKeysMusic" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorPrimaryVariant">@color/primaryLight</item>
        <item name="colorOnPrimary">@color/main_clr</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryDark</item>
        <item name="colorSecondaryVariant">@color/secondaryLight</item>
        <item name="colorOnSecondary">@color/secondary_main_clr</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:popupMenuStyle">@style/Theme.DeepKeysMusic.PopupMenu</item>
    </style>

    <style name="Theme.DeepKeysMusic.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/primaryLight</item>
    </style>

    <style name="Theme.DeepKeysMusic.CropTheme">
        <item name="android:windowBackground">@color/primaryLight</item>
    </style>

    <style name="Theme.DeepKeysMusic.ShortLay">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparentLight</item>
    </style>

    <style name="Theme.DeepKeysMusic.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/primaryDark</item>
        <item name="android:actionMenuTextColor">@color/hint_clr</item>
    </style>

    <style name="EditText">
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Spinner">
        <item name="android:textColor">@color/hint_clr</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="background">@color/primaryLight</item>
        <item name="backgroundTint">@color/hint_clr</item>
        <item name="popupMenuBackground">@color/primaryLight</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>